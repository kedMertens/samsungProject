<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Настройки"
        android:textColor="#000000"
        android:textSize="40dp"
        android:textAlignment="center"/>

    <Switch
        android:id="@+id/monitored_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="°С"
        android:textOff="°С"
        android:textOn="°F"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/monitored_switch">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Блокировать эти категории:"
            android:textColor="#000"
            android:textSize="20dp"/>

        <CheckBox
            android:id="@+id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Головные уборы" />

        <CheckBox
            android:id="@+id/glove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Перчатки" />

        <CheckBox
            android:id="@+id/scarf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Шарфы"/>

        <CheckBox
            android:id="@+id/coat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Верхняя одежда" />

        <CheckBox
            android:id="@+id/jeans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Брюки" />

        <CheckBox
            android:id="@+id/shirt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Футболки" />

        <CheckBox
            android:id="@+id/boot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Обувь" />

        <CheckBox
            android:id="@+id/eyeglasses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Аксессуары" />

        <CheckBox
            android:id="@+id/jogger_pants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Термобелье" />

        <CheckBox
            android:id="@+id/sweater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Кофты" />
    </LinearLayout>




</android.support.constraint.ConstraintLayout>